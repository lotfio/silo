{
    "name": "lotfio/silo",
    "description": "fast for lazy devs",

    "require": {
        "lotfio/omniscient"  : "dev-develop",
        "lotfio/aven"        : "dev-develop",
        "lotfio/ouch"        : "dev-develop",
        "lotfio/oofile"      : "^0.1",
        "lotfio/conso"       : "^0.2",
        "lotfio/caprice"     : "^0.1"
    },
    
    "require-dev": {
        "phpunit/phpunit" : "^8.0"
    },

    "autoload": {
        "psr-4": {
            "App\\" : "app/"
        },
        "files": [
            "sup/helpers.php"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\" : "tests"
        }
    },

    "scripts": {
        "post-root-package-install": [
            "@php -r \"copy('.env.example', '.env');\""
        ],

        "post-create-project-cmd": [
            "@php silo env:init",
            "@php silo assets:publish"
        ]
    }
}
