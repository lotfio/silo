use Conso\Input;
use Conso\Output;
use Conso\Config;
use App\Kernel\Http;

require 'vendor/autoload.php';

$webKernel = new Http;

$webKernel->loadConfig();
$webKernel->loadWebRoutes();


Config::load(); // load config
Config::appName("silo");
Config::appVersion("0.1.0");
Config::appRelease("28.08.2019 by lotfio lakehal");
Config::appLogo("app/Console/stub/logo");
Config::appDefaultCommand();

Config::addCommands('vendor/lotfio/aven/src/Aven/Console/Commands/'); //your commands file should be added here

Config::addCommands('app/Console/Commands/'); //your commands file should be added here
Config::addNamespace('App\\Console\\Commands\\'); // your commands namespace shoud be added here

/**
 * get instance
 */
$app = new Conso\App(new Input, new Output);


// start application
$app->run();