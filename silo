use Conso\Input;
use Conso\Output;
use OoFile\Conf;
use App\Kernel\Http;

require 'vendor/autoload.php';

$webKernel = new Http; // should be replaced with consol kernel

$webKernel->enableErrorHandler();
$webKernel->loadConfig();
$webKernel->loadWebRoutes();

Conf::add(__DIR__."/conf/");

$app = new Conso\App(new Input, new Output);

// start application
$app->run();